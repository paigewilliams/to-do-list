


<div class="row">
  <div class="col-4">
    <form class="to_do" action="/list" method="post">
      <div class="form-group">
        <input class="form-control" placeholder="name of list" type="text" name="name">
      </div>
      <button class="btn btn-primary" type="submit" name="button">Create a list</button>
    </form>
  </div>

</div>
<br>
<br>
<br>

<div class="row">
<% if @lists.any?() %>
  <%  @lists.each do |list| %>
  <div class="col-4">
  <h3><%= list.name %></h3>
    <ul>
      <% if @tasks.any?() %>
        <%  @tasks.each do |task| %>
        <% if task.list_id == list.id%>
            <li> <%= task.description %>, Completed? <%= task.completed%> <a href='/complete/<%= task.id %>'> Complete!</a> </li>
            <% end %>
        <% end %>
      <% end %>
    </ul>

      <form class="to_do" action="/list/<%= list.id %>" method="post">
        <div class="form-group">
          <input class="form-control" placeholder="name of task" type="text" name="description">
        </div>
        <div class="form-group">
          <input class="form-control" placeholder="Due Date" type="date" name="due_date">
        </div>
        <button class="btn btn-primary" type="submit" name="button">Add to list</button>
      </form>
    </div>

    <br>
    <br>
    <% end %>
<% end %>

</div>
